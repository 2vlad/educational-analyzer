# Supabase

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# App URL (for production email redirects)
# Development: http://localhost:3000
# Production: https://your-app.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3000

# LLM Providers
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
YANDEX_API_KEY=your-yandex-api-key-here
YANDEX_FOLDER_ID=your-yandex-folder-id-here

# LLM Config
DEFAULT_MODEL=claude-haiku-4
ENABLE_MODEL_SWITCHING=true
MAX_RETRIES=3
REQUEST_TIMEOUT=30000

# App config
MAX_FILE_SIZE_MB=10
MAX_TEXT_LENGTH=25000
RATE_LIMIT_PER_HOUR=10

# Railway deployment
RAILWAY_STATIC_URL=

# Security
RATE_LIMIT_SALT=your-random-salt-string-here
CRON_SECRET=your-cron-secret-here

# CORS allowlist for API routes (comma-separated)
# CORS_ALLOWED_ORIGINS=https://your-app.vercel.app,https://admin.your-app.com
